<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:gravity="center"
    tools:context=".PictureGameSetting">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/kotra_bold"
        android:text="인물 게임"
        android:textSize="50sp"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/layout_picture_game_hint"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:id="@+id/btn_close_picture_game_hint"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:scaleType="centerInside"
            android:src="@drawable/hint"
            android:id="@+id/btn_picture_game_hint"
            android:clickable="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            />

        <ImageButton
            android:id="@+id/back_mode"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="50dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/left_select" />

        <ImageButton
            android:id="@+id/next_mode"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="50dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/right_select" />

        <ImageView
            android:id="@+id/normal_mode"
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            android:src="@drawable/basic_myohan" />

        <TextView
            android:id="@+id/category"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="107dp"
            android:layout_marginBottom="35dp"
            android:fontFamily="@font/kotra_bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/timeset"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kotra_bold"
            android:gravity="center"
            android:textColorHint="@color/white"
            android:hint="시간(초)"
            android:inputType="number"
            android:textSize="15dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="X" />

        <EditText
            android:id="@+id/repeat"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kotra_bold"
            android:gravity="center"
            android:textColorHint="@color/white"
            android:hint="문제 수"
            android:inputType="number"
            android:textSize="15dp" />

    </LinearLayout>

    <Button
        android:id="@+id/startbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="시작"
        android:fontFamily="@font/kotra_bold"
        android:textSize="15dp" />

</LinearLayout>