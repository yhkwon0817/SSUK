<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CarGame">

    <ImageView
        android:id="@+id/jump_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/jump_remove"
         />

    <ImageView
        android:id="@+id/start_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/start_remove"
        />
    <ImageView
        android:id="@+id/stop_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/stop_remove"
        />
    <ImageView
        android:id="@+id/turn_left_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/turn_left_remove"
        />

    <ImageView
        android:id="@+id/turn_right_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/turn_right_remove"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Next_button"
        android:text="NEXT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>